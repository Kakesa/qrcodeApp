<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Short Url App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Contenu principal centrÃ© -->
  <div class="flex-1 flex items-center justify-center px-4">
    <div class="bg-white shadow-lg rounded-xl p-6 w-full max-w-md md:max-w-lg lg:max-w-xl">
      <h1 class="text-2xl md:text-3xl font-bold mb-6 text-center text-blue-600">
        ðŸ”— Raccourcisseur dâ€™URL avec QR Code
      </h1>

      <!-- Formulaire -->
      <form method="POST" action="/shorten" class="flex flex-col sm:flex-row gap-3 mb-6">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input 
          type="url" 
          name="url" 
          placeholder="Entrez votre URL Ã  raccourcir" 
          required
          class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
        >
        <button 
          type="submit" 
          class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition"
        >
          Raccourcir
        </button>
      </form>

      <!-- RÃ©sultat -->
      @if(shortUrl)
        <div class="text-center space-y-4">
          <p class="text-gray-700 text-sm sm:text-base">Votre URL raccourcie :</p>
          <a 
            href="{{ shortUrl }}" 
            target="_blank" 
            class="text-blue-600 font-semibold underline break-all"
          >
            {{ shortUrl }}
          </a>
          
          <div class="mt-4">
            <p class="text-gray-700 text-sm sm:text-base">Scannez le QR Code :</p>
            <img src="{{ qr }}" alt="QR Code" class="mx-auto mt-2 border rounded-lg shadow w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64">
          </div>
        </div>
      @endif
    </div>
  </div>

  <!-- Footer collÃ© en bas -->
